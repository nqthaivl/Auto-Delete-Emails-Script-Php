{
  "manifest_version": 3,
  "name": "Auto URL Runner",
  "version": "1.0",
  "description": "Tự động mở URL theo khoảng thời gian cài đặt.",
  "permissions": [
    "alarms",
    "storage",
    "tabs"
  ],
  "action": {
    "default_popup": "popup.html",
    "default_title": "Cấu hình Auto Run"
  },
  "background": {
    "service_worker": "background.js"
  },
  "icons": {
    "16": "icon16.png",
    "48": "icon48.png",
    "128": "icon128.png"
  }
}
